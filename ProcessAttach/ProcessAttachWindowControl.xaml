<UserControl x:Class="ProcessAttach.ProcessAttachWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid Margin="0,0,0,131">
        <StackPanel Orientation="Vertical" Margin="-10,-10,10,10">
            <TextBlock Margin="10" HorizontalAlignment="Center">ProcessAttachWindow</TextBlock>
            <Button Content="Debug &amp; Detach" Click="button1_Click" Height="28" x:Name="button1" Margin="18,0,163,0"/>
            <Button Content="Attach back" Click="button2_Click" Height="24" x:Name="button1_Copy" Margin="194,0,17,0" RenderTransformOrigin="0.593,1.131"/>
        </StackPanel>
    </Grid>
</UserControl>
